<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomSheetCont"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/drag_shape"
        android:gravity="center|center_vertical"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contLayoutOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="@string/whatShowFirst"
                android:textColor="@color/textPrimary"
                android:textFontWeight="800"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contLayoutTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="Популярные"
                android:textColor="@color/textPrimary"
                android:textFontWeight="500"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/contLayoutThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="Любимые"
            android:textColor="@color/textPrimary"
            android:textFontWeight="500"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contLayoutFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="Ближайшие (скоро)"
            android:textColor="@color/textDescription"
            android:textFontWeight="500"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:textColor="@color/textSecondary"
        android:fontFamily="@font/montserrat_bold"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Показать"></Button>

</LinearLayout>

</LinearLayout>